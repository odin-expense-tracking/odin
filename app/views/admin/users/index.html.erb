<div class="content">
  <div class="row m-1">
    <div class="col-12">
      <div class="card table-card card-shadow">
        <div class="card-header">
          <div class="card-title">
            Manage Users
          </div>
          <div class="card-menu">
            <%= link_to '#', class: 'icon-button search' do %>
              <i class="fas fa-search"></i>
            <% end %>
            <%= link_to 'Invite User', new_admin_user_path, class:'btn btn-primary' %>
          </div>
        </div>
        <div class="card-body">
          <div class="card-table-search">
            <%= text_field_tag :search, nil, placeholder: :Search %>
            <%= link_to '#', class: 'close-search' do %>
              &times;
            <% end %>
          </div>
          <table>
            <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |u| %>
              <tr>
                <td>
                  <%= u.name %>
                </td>
                <td>
                  <%= u.email %>
                </td>
                <td>
                  <%= link_to 'View', admin_user_path(u) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>